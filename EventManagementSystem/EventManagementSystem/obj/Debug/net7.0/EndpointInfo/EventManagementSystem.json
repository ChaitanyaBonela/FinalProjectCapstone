          "date",
          "location",
          "maxAttendees",
          "title"
        ],
        "type": "object",
        "properties": {
          "eventID": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "minLength": 1,
            "type": "string"
          },
          "description": {
            "type": "string",
            "nullable": true
          },
